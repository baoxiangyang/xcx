.paddingSide {
  background-color: #fff;
  padding-top: 12rpx;
  padding-bottom: 12rpx;
  margin: 24rpx;
  border-radius: 10rpx;
}
.infoItem {
  margin: 12rpx 0;
  overflow: hidden
}
.rightInfo {
  float: right;
  color: #999
}
.redColor {
  color: red
}
.headline {
  font-size: 36rpx;
  border-bottom: 2rpx solid #eee;
  padding-bottom: 10rpx;
}
.stateItem {
  width: 33.33%;
  text-align: center;
  display: inline-block;
}
.stateList {
  padding: 10rpx 0;
  color: red;
}
.stateList .stateItem:nth-child(3n+1) {
  color: #8C9AFB;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.stateList .stateItem:nth-child(3n+0) {
  font-weight: 700;
}
.billList {
  width:100%;
}

.list {
  margin: 20rpx 20rpx;
  display: flex;
  justify-content: space-between;
  align-items:center;
  background-color: #fff;
  border-radius: 10rpx;
  padding: 10rpx 24rpx;
  box-shadow: 4rpx 6rpx 5rpx #000;
}
.left, .right {
  flex: 0 0 auto;
}
.middle {
  flex: 1 1 auto;
  font-size: 26rpx;
  min-height: 100rpx;
}

/*中间详情css  */
.middle .name, .middle .createTime{
  color: #666;
}
.middle .details {
  text-indent: 2em;
  font-size: 30rpx;
}
.middle .createTime {
  text-align: right;
  font-size: 26rpx;
}
/*头像css  */
.userAvatar{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  vertical-align: top;
  margin-right: 15rpx;
}
/*金额css  */
.money {
  color: red;
  margin-left: 20rpx;
}
.money text {
  font-size: 24rpx;
}