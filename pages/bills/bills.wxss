/*头部css  */
.header {
  background-color: #fff;
  text-align: center;
  padding-bottom: 20rpx;
}
.header text {
  font-size: 24rpx;
}
.header button:first-child {
  float: left;
}
.more {
  display: block;
  font-size: 28rpx;
  line-height: 56rpx;
  float: right;
  color: #666;
}
/*消息列表css  */
.list {
  margin: 20rpx 0;
  display: flex;
  justify-content: space-between;
  align-items:center;
  background-color: #fff;
  border-radius: 10rpx;
  padding: 10rpx 20rpx;
  box-shadow: 4rpx 6rpx 5rpx #000;
}
.left, .right {
  flex: 0 0 auto;
}
.middle {
  flex: 1 1 auto;
  font-size: 26rpx;
  min-height: 100rpx;
}

/*中间详情css  */
.middle .name, .middle .createTime{
  color: #666;
}
.middle .details {
  text-indent: 2em;
  font-size: 30rpx;
}
.middle .createTime {
  text-align: right;
  font-size: 26rpx;
}
/*头像css  */
.userAvatar{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  vertical-align: top;
  margin-right: 15rpx;
}
/*金额css  */
.money {
  color: red;
  margin-left: 20rpx;
}
.money text {
  font-size: 24rpx;
}
/*添加按钮css  */
.add {
  position: fixed;
  bottom:50rpx;
  right:50rpx;
  width: 40rpx;
  height: 40rpx;
  text-align: center;
  font-size: 30rpx;
  background-color: #fff;
  display: inline-block;
  padding: 10rpx;
  font-weight: 700;
  border-radius: 12rpx;
  color: #1AAD19;
  box-shadow: 0 8rpx 16rpx 0 rgba(0,0,0,0.2), 0 6rpx 20rpx 0 rgba(0,0,0,0.19);
}
